<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="user_information"
        app:title="User Information"
        >

        <EditTextPreference
            app:key="username"
            app:title="Your Email"/>


    </PreferenceCategory>

    <PreferenceCategory
        app:key="help"
        app:title="Help">

        <Preference
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send feedback"
            app:fragment="com.abdu.and_sep4.View.Report.ReportFragment"
            />

    </PreferenceCategory>


    <PreferenceCategory
        app:key="Signout"
        app:title="Signout">

        <Preference
            app:key="signout"
            app:title="Signout from you're account">

        </Preference>

    </PreferenceCategory>


</PreferenceScreen>